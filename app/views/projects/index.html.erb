<p id="notice"><%= notice %></p>
<div class="container">
  <h1>Projects</h1>


  <div class="add-new-project-button">
    <%= link_to 'New Project', new_project_path, :class => "btn btn-primary" %>
  </div>


  <div class="row">
    <% @projects.each do |project| %>
    <div class="col-sm-3" style="background-color":;>

      <div class="card top-buffer">
        <%= link_to project_path(project) do %>


        <%= image_tag("folder.png", class: "card-img-top img-responsive center-block") %>
        <div class="overlay img-responsive">

          <div class="text-center">
            <div class="card-body text-info">
             <h4 class="card-title center-block"><strong><%=truncate(project.title, length:13)=%> </strong> </h4>
           </div>
         </div>
       </div>
     </div>

     <% if  current_user.admin%>
     <div class="text-center">
      <%= link_to "Delete this project", project_path(project), method: :delete,
      data: { confirm: "Are you sure you want to delete this project?" } %>
    </div>

    <% end %>
    <% end %>
  </div>
  <% end %>
</div>
</div>
