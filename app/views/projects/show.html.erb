<p id="notice"><%= notice %></p>
<div class="container">
  <h1>You are inside the project:

    <%=@project.title %></h1>
    <h1>This project has been created by:</h1>
    <%=@project.user.email %></h1>

    <div class="add-new-project-button">
      <% if  current_user.admin%>

      <%= link_to 'Add a paper to this project', new_project_paper_path(@project.id), :class => "btn btn-danger" %>
      <% end %>
      <%= link_to 'See all projects', projects_path, :class => "btn btn-primary" %>
      <%= link_to 'Check statistics of this project', replies_project_project_path(@project.id), :class => "btn btn-primary" %>
<% if  current_user.admin%>

      <%= link_to "Delete this project", project_path(@project), :class => "btn btn-primary",  method: :delete,
      data: { confirm: "Are you sure you want to delete this project?" } %>
<% end %>

    </div>
    <div class="row">
      <% @project.papers.each do |paper| %>

      <div class="col-xs-12 col-sm-4">
        <%= link_to project_paper_path(paper.project.id, paper.id) do %>
        <div class="card">
          <div class="card-description">
            <div class="card-born-country">
              <div class="card-born">
                Title of the paper
                <p><%=paper.title=%>,</p>
              </div>
              Summary of the paper
              <div class="card-country">
                <p> <%= paper.body=%></p>
              </div>
            </div>

          </div>
          <% if  current_user.admin%>

          <div class="delete-item">
            <%= link_to "Delete this paper", project_paper_path(paper.project.id, paper), method: :delete,
            data: { confirm: "Are you sure you want to delete this paper?" } %>
          </div>
          <% end %>
        </div>
        <% end %>

      </div>
      <% end %>
    </div>




