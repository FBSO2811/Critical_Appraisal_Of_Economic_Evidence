<p id="notice"><%= notice %></p>
<div class="container">
  <%= link_to 'Go back to the project', project_path(@paper.project.id), :class => "btn btn-primary" %>
  <br>
<% if  current_user.admin%>

  <%= link_to "Delete this paper", project_paper_path(@paper.project.id, @paper), method: :delete,
  data: { confirm: "Are you sure you want to delete this paper?" }, :class => "btn btn-danger" %>
<% end %>
  <h1>This paper is inside the project:</h1>
  <%= @paper.project.title %>

  <h1>This paper is created by user: the project:</h1>
  <%= @paper.project.user.email %>

  <h1>You are reading the paper: </h1>

  <p>
    <strong>Title</strong>
    <br>
    <%= @paper.title %>
  </p>

  <p>
    <strong>Summary of the Paper</strong>
    <br>
    <%= @paper.body %>
  </p>

  <strong>The PDF of the Paper</strong>
  <br>
    <%= link_to "Download the PDF", rails_blob_path(@paper.paper_pdf, disposition: :attachment), :class => "btn btn-success" %>
    <%= link_to "Open the paper", @paper.paper_pdf, target: :_blank, :class => "btn btn-warning" %>
    <% if current_user.admin == false %>

    <%= link_to "Review the paper", new_project_paper_question_path(@paper.project.id, @paper.id), :class => "btn btn-primary" %>
    <% end %>


    <%= link_to "Check paper statistics", replies_project_paper_questions_path(@paper.project.id, @paper.id), :class => "btn btn-danger" %>

  <br>
<%= link_to image_tag(@paper.paper_pdf.preview(resize: "1000x1000")), @paper.paper_pdf, target: :_blank %>




</p>


</div>
